@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUserModel> SignInManager
@inject UserManager<AppUserModel> UserManager

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SB Admin 2 - Tables</title>

    <!-- Custom fonts for this template -->
    <link href="~/course/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/bootstrap-icons.css" rel="stylesheet">
    <link href="~/course/css/sb-admin-2.min.css" rel="stylesheet">
    <link href="~/css/templatemo-topic-listing.css" rel="stylesheet">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet">

    <style>
        .bg-gradient-primary {
            background-image: linear-gradient(15deg, #256886 0%, #6fbcbb 100%);
            background-size: cover;
        }

        .breadcrumb {
            background-color: white; 
            color: black; 
            padding: 10px;
            border-radius: 5px;
        }

        .breadcrumb-item {
            display: inline;
        }

            .breadcrumb-item + .breadcrumb-item:before {
                content: "/"; 
                margin: 0 5px;
                color: black; 
            }

            .breadcrumb-item a {
                color: gray; 
                text-decoration: none; 
            }

                .breadcrumb-item a:hover {
                    color: black; 
                }

            .breadcrumb-item.active {
                color: black; 
            }

        .navbar-search .input-group {
            border: 1px solid #ced4da; 
            border-radius: 30px; 
        }

        .navbar-search .form-control {
            border: none; 
            border-radius: 30px; 
        }

        .navbar-search .input-group-append .btn {
            border-radius: 30px; 
        }
    </style>
</head>

<body id="page-top">

    @{
        var currentCourse = ViewBag.Course as CourseModel;
        var courseID = currentCourse.CourseID;
        var user = await UserManager.GetUserAsync(User);
    }

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <a class="sidebar-brand text-dark mr-auto" asp-action="Index" asp-controller="Home">
                <i class="bi-back"></i>
                <span>Topic</span>
            </a>

            @if (currentCourse.InstructorID.Equals(user.Id))
            {
                <!-- Nav Item - Dashboard -->
                <li class="nav-item @(ViewContext.RouteData.Values["controller"].ToString() == "Instructor" && ViewContext.RouteData.Values["action"].ToString() == "Dashboard" ? "active" : "")">
                    <a class="nav-link" asp-action="Dashboard" asp-controller="Instructor" asp-route-CourseID="@courseID">
                        <i class="fas fa-fw fa-tachometer-alt"></i>
                        <nav-link>Dashboard</nav-link>
                    </a>
                </li>
            }

            <!-- Nav Item - Course Info -->
            <li class="nav-item  @(ViewContext.RouteData.Values["controller"].ToString() == "Participation" && ViewContext.RouteData.Values["action"].ToString() == "CourseInfo" ? "active" : "")">
                <a class="nav-link" asp-action="CourseInfo" asp-controller="Participation" asp-route-CourseID="@courseID">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <nav-link>Course Info</nav-link>
                </a>
            </li>

            <!-- Nav Item - Material -->
            <li class="nav-item  @(ViewContext.RouteData.Values["controller"].ToString() == "Participation" && ViewContext.RouteData.Values["action"].ToString() == "MaterialList" ? "active" : "")">
                <a class="nav-link" asp-action="MaterialList" asp-controller="Participation" asp-route-CourseID="@courseID">
                    <i class="fas fa-file-alt"></i>
                    <nav-link> Materials</nav-link>
                </a>
            </li>

            <!-- Nav Item - Pages Collapse Menu -->
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#lectureList"
                   aria-expanded="true" aria-controls="collapseTwo">
                    <i class="fas fa-book-open"></i>
                    <nav-link>Lectures</nav-link>
                </a>
                <div id="lectureList" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">

                        @if (currentCourse.InstructorID.Equals(user.Id))
                        {
                            <h6 class="ml-4 mt-1">
                                <a class="btn btn-outline active" data-bs-toggle="modal" data-bs-target="#createLectureModal">
                                    Add Lecture<i class="ml-3 fas fa-plus-circle"></i>
                                </a>
                            </h6>
                        }

                        @Html.Partial("_SideLecture", courseID)
                    </div>
                </div>
            </li>

            <li class="nav-item  @(ViewContext.RouteData.Values["controller"].ToString() == "Participation" && ViewContext.RouteData.Values["action"].ToString() == "Grades" ? "active" : "")">
                <a class="nav-link" asp-action="GradeList" asp-controller="Participation" asp-route-CourseID="@courseID">
                    <i class="fas fa-clipboard-list"></i>
                    <nav-link>Grades</nav-link>
                </a>
            </li>

            <li class="nav-item  @(ViewContext.RouteData.Values["controller"].ToString() == "Participation" && ViewContext.RouteData.Values["action"].ToString() == "TestList" ? "active" : "")">
                <a class="nav-link" asp-action="TestList" asp-controller="Participation" asp-route-CourseID="@courseID">
                    <i class="fas fa-clipboard-list"></i>
                    <nav-link>Tests</nav-link>
                </a>
            </li>

            <li class="nav-item  @(ViewContext.RouteData.Values["controller"].ToString() == "Participation" && ViewContext.RouteData.Values["action"].ToString() == "AssignmentList" ? "active" : "")">
                <a class="nav-link" asp-action="AssignmentList" asp-controller="Participation" asp-route-CourseID="@courseID">
                    <i class="fas fa-tasks"></i>
                    <nav-link>Assignments</nav-link>
                </a>
            </li>

            <li class="nav-item  @(ViewContext.RouteData.Values["controller"].ToString() == "Participation" && ViewContext.RouteData.Values["action"].ToString() == "AssignmentList" ? "active" : "")">
                <a class="nav-link" asp-action="AssignmentList" asp-controller="Participation" asp-route-CourseID="@courseID">
                    <i class="bi bi-broadcast"></i>
                    <nav-link>Live stream</nav-link>
                </a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider d-none d-md-block">

            <!-- Sidebar Toggler (Sidebar) -->
          @*   <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div> *@

        </ul>
        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                    <!-- Sidebar Toggle (Topbar) -->
                    <form class="form-inline">
                        <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                            <i class="fa fa-bars"></i>
                        </button>
                    </form>

                    <ol class="breadcrumb mb-0 mr-auto">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
                        <li class="breadcrumb-item"><a asp-action="UserCourse" asp-controller="Course">My Courses</a></li>
                        @if (currentCourse != null)
                        {
                            <li class="breadcrumb-item active" aria-current="page">@currentCourse.Title</li>
                        }
                    </ol>

                    <!-- Topbar Search -->
                    <div class="d-none d-lg-block ml-auto">
                        <form asp-action="Search" asp-controller="Course" method="GET" class="navbar-form" style="display: inline; position: relative;">
                            <input type="text" name="keyword" placeholder="Search"
                                   style="padding: 10px 15px; border-radius: 25px; border: 1px solid #ccc; outline: none; width: 250px;">
                            <button type="submit"
                                    style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%); background-color: transparent; border: none; cursor: pointer;">
                                <i class="me-2 bi bi-search" style="font-size: 1.2em;"></i>
                            </button>
                        </form>
                    </div>

                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">

                        <!-- Nav Item - Alerts -->
                        <li class="nav-item dropdown no-arrow mx-1">
                            <a class="nav-link dropdown-toggle" href="#" id="alertsDropdown" role="button"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-bell fa-fw"></i>
                                <!-- Counter - Alerts -->
                                <span class="badge badge-danger badge-counter">3+</span>
                            </a>
                        </li>

                        <!-- Nav Item - Messages -->
                        <li class="nav-item dropdown no-arrow mx-1">
                            <a class="nav-link dropdown-toggle" href="#" id="messagesDropdown" role="button"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-envelope fa-fw"></i>
                                <!-- Counter - Messages -->
                                <span class="badge badge-danger badge-counter">7</span>
                            </a>
                        </li>

                        <!-- Nav Item - User Information -->
                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <img class="img-profile rounded-circle"
                                     src="@user.ProfileImagePath">
                                <span class="ml-2 d-none d-lg-inline text-gray-600 small">@user.FirstName @user.LastName</span>
                                <i class="fas fa-caret-down ml-2"></i> 
                            </a>
                            <!-- Dropdown - User Information -->
                            <div class="dropdown-menu dropdown-menu-right shadow"
                                 aria-labelledby="userDropdown">
                                <a class="dropdown-item" asp-action="UserProfile" asp-controller="Profile">
                                    <i class="fas fa-user fa-sm fa-fw me-2 text-gray-400"></i>Your Profile
                                </a>
                                <a class="dropdown-item" asp-area="Student" asp-action="TransferStudent" asp-controller="Payment">
                                    <i class="fas fas fa-exchange-alt fa-sm fa-fw me-2 text-gray-400"></i>Request A Transfer
                                </a>
                                <div class="dropdown-divider"></div>
                                <form asp-action="Logout" asp-controller="Account" method="post">
                                    <button type="submit" class="dropdown-item">
                                        <i class="fas fa-sign-out-alt fa-sm fa-fw me-2 text-gray-400"></i>Logout
                                    </button>
                                </form>
                            </div>
                        </li>

                    </ul>

                </nav>


                @RenderBody()

                <!-- Add Lecture Modal -->
                <div class="modal fade" id="createLectureModal" tabindex="-1" aria-labelledby="addLectureModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="addLectureModalLabel">Add New Lecture</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form id="addLectureForm" enctype="multipart/form-data" method="post" asp-area="Instructor" asp-controller="Lecture" asp-action="Create">
                                    <input type="hidden" class="form-control" name="CourseID" value="@courseID" required>
                                    <div class="mb-3">
                                        <label for="Title" class="form-label">Title</label>
                                        <input type="text" class="form-control" name="Title" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="Description" class="form-label">Description</label>
                                        <textarea class="form-control" name="Description" rows="3" required></textarea>
                                    </div>
                                    <div class="mb-3">
                                        <label for="LectureFile" class="form-label">Upload Lecture Documents</label>
                                        <input type="file" class="form-control" name="LectureFile" accept=".pdf,.doc,.docx,.ppt,.pptx" multiple>
                                    </div>
                                    <div class="mb-3">
                                        <label for="VideoFile" class="form-label">Upload Lecture Video</label>
                                        <input type="file" class="form-control" name="VideoFile" accept=".mp4,.mov,.avi">
                                    </div>
                                    <button type="submit" class="custom-btn">Add Lecture</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Add Lecture Modal -->

            </div>
            <!-- End of Main Content -->
            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Your Website 2020</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                <div class="modal-footer">
                    <button class="btn custom-btn active" type="button" data-dismiss="modal">Cancel</button>
                    <form asp-action="Logout" asp-controller="Account" method="post">
                        <button type="submit" class="btn custom-btn ">Logout</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/course/vendor/jquery/jquery.min.js"></script>
    <script src="~/course/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/course/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/course/js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="~/course/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/course/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/course/js/demo/datatables-demo.js"></script>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Bootstrap Bundle JS (includes Popper.js) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    @await Component.InvokeAsync("Notyf")
    @await RenderSectionAsync("Scripts", required: false)

    @RenderSection("Scripts", required: false)
</body>

</html>