    </div>
</header>
<style>
    .topics-section {
        padding: 50px 100px 50px 100px;
        background-color: #f7f7f7;
    }

    .dropdown-item.active,
    .dropdown-item:active {
        background-color: #f8f9fa !important; /* Màu nền tùy chỉnh cho trạng thái active */
        color: #212529 !important; /* Màu chữ tùy chỉnh cho trạng thái active */
    }
</style>
<section class="topics-section">
        <div class="button-group d-flex justify-content-between align-items-center">
        @if (User.IsInRole("Instructor"))
        {
            <div>
                <button class="btn custom-btn active" data-bs-toggle="modal" data-bs-target="#createCourseModal">
                    <i class="fas fa-plus new-icon"></i> Create new course
                </button>
            </div>
        }
        else if (User.IsInRole("Student"))
        {
                <div>
            @*         <button class="btn custom-btn active" onclick="toggleButton(this)">In Progress</button>
                    <button class="btn custom-btn active" onclick="toggleButton(this)">Complete</button>
                    <button class="btn custom-btn active" onclick="toggleButton(this)">Saved</button> *@
                </div>
        }
            <div>
                <select class="filter-select" id="categoryFilter">
                    <option value="">All Category</option>
                    <option value="programming">Programming</option>
                    <option value="design">Design</option>
                    <option value="dataSience">Data Science</option>
                    <option value="webDevelopment">Web Devleopment</option>
                </select>

                <select class="filter-select" id="difficultyFilter">
                    <option value="">All Level</option>
                    <option value="beginner">Beginner</option>
                    <option value="intermediate">Intermediate</option>
                    <option value="advanced">Advanced</option>
                </select>
            </div>
        </div>
        @foreach (var course in Model.Courses)
        {

        <div class="custom-block custom-block-topics-listing bg-white shadow-lg mb-5">
            <div class="row">

                <div class="col-md-2">
                    <img src="~/Images/@course.CoverImagePath" class="custom-block-image img-fluid ms-3" alt="">
                </div>
                <div class="col-md-9 row custom-block-topics-listing-info">
                    <div class="col-md-11 ms-3">
                        <div class="d-flex">
                            <div>
                                <h4 class="mb-2">
                                    @course.Title
                                    <span class="dot @((course.Status == true) ? "text-danger" : "text-muted")">&#9679;</span>
                                </h4>
                            </div>
                        </div>
                        <h6>@course.Level</h6>
                        <p>Instructor: @course.Instructor?.AppUser?.FirstName @course.Instructor?.AppUser?.LastName</p>
                        <div class="row progress-group d-flex justify-content-between">
                            @if (Model.StudentCourses != null && User.IsInRole("Student"))
                            {
                                var studentCourse = Model.StudentCourses.FirstOrDefault(cs => cs.CourseID == course.CourseID);

                                <div class="col-md-9 row align-items-end">
                                    <div class="col-md-8">
                                        <div>
                                            <h8>@studentCourse.CertificateStatus: @(studentCourse.Progress * 100)%</h8>
                                        </div>
                                        <div class="progress">
                                            <div class="progress-bar-custom" style="width:@(studentCourse.Progress * 100)%;">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <i class="fas fa-flag"></i>
                                        <h8>Ends on @String.Format("{0:dd/MM/yyyy}", course.EndDate)</h8>
                                    </div>
                                </div>
                            }
                                <div class="col-md-3">
                                <a asp-action="CourseInfo" asp-controller="Participation" asp-route-CourseID="@course.CourseID" class="btn custom-btn mt-auto mt-lg-4">Go to course</a>
                                </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-1 d-flex justify-content-end align-items-start">
                    <div class="dropdown">
                        <button class="btn" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-three-dots-vertical"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton">
                            <li><a class="dropdown-item" asp-action="CourseDetail" asp-controller="Course" asp-route-CourseID="@course.CourseID">Course Detail</a></li>
                            @if (User.IsInRole("Instructor"))
                            {
                                <li><a class="dropdown-item" data-bs-toggle="modal" data-bs-target="#updateCourseModal-@course.CourseID">Update Course</a></li>
                                <li>
                                    <a class="dropdown-item @(course.Status ? "text-danger" : "")"
                                       data-bs-toggle="modal"
                                       data-bs-target=#setSatateCourseModal-@course.CourseID>
                                        @(course.Status ? "Disable Course" : "Enable Course")
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- Update Course Modal -->
        <div class="modal fade" id="updateCourseModal-@course.CourseID" tabindex="-1" aria-labelledby="updateCourseModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="updateCourseModalLabel">Update Course</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form id="updateCourseForm" enctype="multipart/form-data" method="post" asp-area="Instructor" asp-controller="Course" asp-action="Update">
                            <input type="hidden" name="CourseID" value="@course.CourseID"> <!-- Ẩn ID khóa học -->
                            <!-- Hiển thị ảnh bìa hiện tại -->
                            <div class="mb-3">
                                <label for="CoverImage" class="form-label">Cover Image</label>
                                <img id="currentCoverImage" src="~/Images/@course.CoverImagePath" alt="Current Cover Image" class="img-fluid mb-3" style="max-width: 100%; height: auto;">
@*                                 <input type="hidden" name="ExistingProfileImagePath" value="@course.CoverImagePath" /> *@
                                <input type="file" class="form-control" name="CoverImage" accept="image/*">
                            </div>

                            <div class="mb-3">
                                <label for="CourseCode" class="form-label">Course Code</label>
                                <input type="text" class="form-control" name="CourseCode" value="@course.CourseCode">
                            </div>
                            <div class="mb-3">
                                <label for="Title" class="form-label">Course Title</label>
                                <input type="text" class="form-control" name="Title" value="@course.Title">
                            </div>
                            <div class="mb-3">
                                <label for="Description" class="form-label">Description</label>
                                <textarea class="form-control" name="Description" rows="3" required>@course.Description</textarea>
                            </div>
                            <div class="mb-3">
                                <label for="courseCategory" class="form-label">Category</label>
                                <select class="form-select" name="CategoryId" value="@course.CategoryID">
                                    <option value="0"></option>
                                    <option value="1">Programming</option>
                                    <option value="2">Design</option>
                                    <option value="3">Data Science</option>
                                    <option value="4">Web Development</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="Level" class="form-label">Level</label>
                                <select class="form-select" name="Level" value="@course.Level">
                                    <option value="none"></option>
                                    <option value="beginner">Beginner</option>
                                    <option value="intermediate">Intermediate</option>
                                    <option value="advanced">Advanced</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="EndDate" class="form-label">End Date</label>
                                <input type="date" class="form-control" name="EndDate">
                            </div>
                            <div class="mb-3">
                                <label for="Price" class="form-label">Price</label>
                                <input type="number" class="form-control" name="Price" value="@course.Price" step="0.01" min="0">
                            </div>
                            <button type="submit" class="btn custom-btn">Update Course</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- Disable Course Modal -->
        <div class="modal fade" id="setSatateCourseModal-@course.CourseID" tabindex="-1" aria-labelledby="disableCourseModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="disableCourseModalLabel">Disable Course</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure you want to @(course.Status ? "disable" : "enable") this course?</p>
                    </div>
                    <div class="modal-footer">
                        <form id="disableCourseForm" method="post" asp-controller="Course" asp-action="SetSate">
                            <input type="hidden" name="CourseID" value="@course.CourseID">
                            <button type="button" class="btn custom-btn active" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn custom-btn">Confirm</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        }
</section>

