@model RequestTransferViewModel
<partial name="_NoficationPartial" />
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Withdraw Money</title>
    <link rel="stylesheet" href="~/css/cssBank/StyleSheet.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script>
        function setAmount(value) {
            document.getElementById('amount').value = value;
        }

        function clearAmount() {
            document.getElementById('amount').value = '';
        }
    </script>
</head>
<body>
    <header>
        <h1>Withdraw Money</h1>
        <h2 id="balance">Current Balance: <span id="balance-value">@Model.CurrentMoney.ToString("N0")</span> VND</h2>
    </header>
    <div class="container">
        <main>
            <form method="post" asp-action="RequestWithdraw" asp-controller="Payment" asp-area="">
                <input asp-for="UserID" hidden>
                <input asp-for="CreateAtTime" hidden>
                <label asp-for="BankName">Bank Name</label>
                <input asp-for="BankName" placeholder="Bank Name" required>
                <span asp-validation-for="BankName" class="error-message"></span>

                <label asp-for="AccountNumber">Account Number</label>
                <input asp-for="AccountNumber" placeholder="Account Number" required>
                <span asp-validation-for="AccountNumber" class="error-message"></span>

                <label asp-for="FullName">Full Name</label>
                <input asp-for="FullName" placeholder="Full Name" required>
                <span asp-validation-for="FullName" class="error-message"></span>

                <label asp-for="MoneyNumber">Withdrawal Amount</label>
                <input  id="amount" asp-for="MoneyNumber" min="0" required>

                <label for="denomination">Denomination</label>
                <div class="denomination-buttons">
                    <button type="button" onclick="setAmount(100000)">100,000 VND</button>
                    <button type="button" onclick="setAmount(200000)">200,000 VND</button>
                    <button type="button" onclick="setAmount(500000)">500,000 VND</button>
                    <button type="button" onclick="setAmount(1000000)">1,000,000 VND</button>
                    <button type="button" onclick="clearAmount()">Other</button>
                </div>

                <div class="d-flex justify-content-around w-100 mt-3">
                    <a asp-action="Index" asp-controller="Home" asp-area="" class="btn btn-warning">Back</a>
                    <input type="submit" value="Withdraw Money" class="btn btn-success">
                </div>
            </form>
        </main>
    </div>
    <footer>
        <p>&copy; 2023 Your Bank Name</p>
    </footer>
</body>
</html>
