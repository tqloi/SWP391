@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <form asp-action="ChangePassword" asp-controller="Account" method="post">
        <h1>Sign In</h1>
        <div class="social-container">
            <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
            <a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
            <a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <span>or use your account</span>
        <div class="mb-3">
            <input asp-for="Username" class="form-control"  readonly />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <input asp-for="NewPassword" class="form-control" placeholder="New Password"  />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <input asp-for="ConfirmNewPassword" class="form-control" placeholder="Confirm"  />
            <span asp-validation-for="ConfirmNewPassword" class="text-danger" ></span>
        </div>
        <div class="text-center">
            <a asp-action="VerifyEmail" asp-controller="Account">Verify Email</a>
        </div>
        
        <div class="row">
            <div class="justify-content-center">
                <button type="submit">Submit</button>
            </div>

        </div>

    </form>
</div>

