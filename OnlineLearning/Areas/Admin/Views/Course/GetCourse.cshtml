@{
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}
@using OnlineLearning.Models
@model CourseModel
<partial name="_NoficationPartial" />

<body>
    <div>
        <br />
        <br />
    </div>
    <style>
    </style>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />

    <div class="event-schedule-area-two bg-color pad100">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title text-center">
                        <div class="title-text">
                            <h2>Course Details</h2>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <div class="table-responsive">
                        <table class="table">
                            <thead class="thanhtieude">
                                <tr>
                                    <th class="text-center" scope="col">ID</th>
                                    <th scope="col">Description</th>
                                    <th class="text-center" scope="col">Venue</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="inner-box">
                                    <th scope="row">
                                        <div class="event-date">
                                            <span>@Model.CourseID</span>
                                        </div>
                                    </th>
                                    
                                    <td>
                                        <div class="event-wrap">
                                            <h3><a href="#">@Model.Title</a></h3>
                                            <div class="meta">
                                                <div class="organizers">
                                                    <a href="#">@Model.Instructor?.AppUser.FirstName @Model.Instructor?.AppUser.LastName</a>
                                                </div>
                                                <div class="time">
                                                    <span>@Model.CreateDate</span>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    
                                    <td>
                                        @if (Model.Status == true)
                                        {
                                            <div class="primary-btn">
                                                <a class="btn btn-danger" asp-action="SetStatusCourse" asp-controller="Course" asp-area="Admin" asp-route-Id="@Model.CourseID">Set Unavailable</a>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="primary-btn">
                                                <a class="btn btn-success" asp-action="SetStatusCourse" asp-controller="Course" asp-area="Admin" asp-route-Id="@Model.CourseID">Set Available</a>
                                            </div>
                                        }
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
