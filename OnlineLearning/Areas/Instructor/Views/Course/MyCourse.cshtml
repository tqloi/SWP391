        </div>
    </div>
</section>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const forms = document.querySelectorAll('.course-form');

        forms.forEach(form => {
            const endDateInput = form.querySelector('.inputdate');
            const submitButton = form.querySelector('.submit-btn');

            function validateDates() {
                const endDate = new Date(endDateInput.value);
                const currentDate = new Date();

                // Reset custom error message
                endDateInput.setCustomValidity('');
                submitButton.disabled = false;

                if (endDate < currentDate) {
                    // Set custom validity message
                    endDateInput.setCustomValidity('End Date cannot be in the past.');
                    submitButton.type = 'button';
                } else {
                    submitButton.type = 'submit';
                }

                // Kiểm tra lại tính hợp lệ để hiển thị lỗi nếu có
                endDateInput.reportValidity();
            }

            endDateInput.addEventListener('change', validateDates); // Đăng ký sự kiện cho endDateInput
        });
    });
</script>