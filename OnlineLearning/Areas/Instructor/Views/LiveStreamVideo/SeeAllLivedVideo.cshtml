@using ApiVideo.Model

@model Dictionary<string, List<Video>>
@{
    Layout = "~/Views/Shared/_CourseLayout.cshtml";
    <partial name="_NoficationPartial" />
}
<h2>Live Videos</h2>
@foreach (var kvp in Model)
{
    <div class="livestream-card">
        <h3>@kvp.Key</h3> <!-- Title of the livestream -->
        @foreach (var video in kvp.Value)
        {
            <div class="video-card">
                <h4>@video.title</h4>
                <img class="img-thumbnail mb-3" src="@video.assets?.thumbnail" width="250" height="200" alt="Live Stream Thumbnail" />
                <h4>View: @video.view</h4>
                <div> 
                    <a asp-action="UpdateVideo" asp-route-id="@video.videoid" class="btn btn-primary">Update</a>
                    <a asp-action="DeleteVideo" asp-route-id="@video.videoid" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this video?');">Delete</a>
                </div>
            </div>
        }
    </div>
}
